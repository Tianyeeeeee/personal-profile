---
import Layout from '../layouts/Layout.astro';
import CommandPalette from '../components/CommandPalette';
import Hero from '../components/Hero';
import BentoGrid from '../components/BentoGrid';
import StatusFooter from '../components/StatusFooter';
---

<Layout title="Tianye | Creative Engineer">
    <CommandPalette client:load />

    <main>
        <Hero client:load />

        <BentoGrid client:visible />

        <section class="py-20 border-y border-[#222] bg-[#080808] overflow-hidden">
             <div class="text-center font-mono text-gray-600 text-xs mt-4">// STACK_OVERFLOW</div>
        </section>

        <section class="max-w-2xl mx-auto px-6 py-24">
            <h2 class="font-mono text-gray-500 mb-8 text-sm">./thoughts</h2>
            <div class="space-y-6">
                <a href="#" class="block group">
                    <div class="flex items-baseline gap-4 font-mono text-sm">
                        <span class="text-gray-600">// 2025-02-14</span>
                        <h3 class="text-gray-300 group-hover:text-green-500 transition-colors">
                            <span class="opacity-0 group-hover:opacity-100 mr-2 text-green-500">_</span>
                            Building High-Performance WebGL with SolidJS
                        </h3>
                    </div>
                </a>
                <a href="#" class="block group">
                    <div class="flex items-baseline gap-4 font-mono text-sm">
                        <span class="text-gray-600">// 2025-01-20</span>
                        <h3 class="text-gray-300 group-hover:text-green-500 transition-colors">
                            <span class="opacity-0 group-hover:opacity-100 mr-2 text-green-500">_</span>
                            Why I switched from React to Astro
                        </h3>
                    </div>
                </a>
            </div>
        </section>
    </main>

    <StatusFooter client:visible />
</Layout>