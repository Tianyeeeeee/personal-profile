---
import Layout from '../layouts/Layout.astro';
import SnakeGame from '../components/SnakeGame';
---

<Layout title="404 | System Failure">
    <div class="min-h-screen flex flex-col items-center justify-center bg-black p-4">
        <div class="max-w-2xl w-full border border-green-900 bg-[#050505] rounded p-1 shadow-[0_0_20px_rgba(34,197,94,0.2)]">
            <div class="bg-[#111] px-4 py-2 border-b border-green-900 flex justify-between items-center">
                <div class="flex gap-2">
                    <div class="w-3 h-3 rounded-full bg-red-500"></div>
                    <div class="w-3 h-3 rounded-full bg-yellow-500"></div>
                    <div class="w-3 h-3 rounded-full bg-green-500"></div>
                </div>
                <div class="text-green-700 font-mono text-xs">ERR_404_PAGE_NOT_FOUND</div>
            </div>

            <div class="p-6 font-mono text-green-500">
                <h1 class="text-5xl font-bold mb-4 glitch-text">404 ERROR</h1>
                <p class="mb-8 text-green-700">
                    > The requested URL was deleted or never existed.<br>
                    > Initiating emergency entertainment protocol...
                </p>

                <SnakeGame client:only="solid-js" />

                <div class="mt-8 pt-4 border-t border-green-900/50 flex justify-between text-xs">
                    <a href="/" class="hover:bg-green-900/50 px-2 py-1 -ml-2 transition-colors">
                        <span class="mr-2">&lt;</span>
                        Return to System (Home)
                    </a>
                    <span class="animate-pulse">_CURSOR_IDLE</span>
                </div>
            </div>
        </div>
    </div>
</Layout>

<style>
    /* 简单的文字故障效果 */
    .glitch-text {
        text-shadow: 2px 0 #ff0000, -2px 0 #0000ff;
    }
</style>